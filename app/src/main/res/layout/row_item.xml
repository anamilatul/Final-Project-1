<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/task_box"
    android:layout_margin="5dp"
    android:padding="10dp">
    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnTaskCompleted">
        <TextView
            android:id="@+id/tvTasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_task"
            android:maxLines="1"
            android:layout_marginEnd="5dp"
            android:textColor="#9F1C4253"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            />
    </HorizontalScrollView>

    <Button
        android:id="@+id/btnTaskCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:backgroundTint="#9F3A94BC"
        android:gravity="center"
        android:text="@string/task_completed"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>