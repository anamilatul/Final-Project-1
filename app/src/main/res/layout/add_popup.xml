<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    android:background="@drawable/box"
    android:backgroundTint="#9ECFE6">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_a_new_task"
        android:textStyle="bold"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textColor="#136F98"
        />
    <TextView
        android:id="@+id/tvAsk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/what_do_you_want_to_do_next"
        android:textColor="#23799F"
        android:textSize="15sp"
        android:layout_below="@+id/tvTitle"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAsk"
        android:layout_marginTop="10dp"
        android:hint="@string/write_your_task_here"
        android:textColor="#4659BF"
        android:textSize="19sp"
        android:textColorHint="#4659BF"
        android:inputType="text"/>
    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:textAllCaps="false"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/write"
        android:backgroundTint="#1A84B5"/>

</RelativeLayout>